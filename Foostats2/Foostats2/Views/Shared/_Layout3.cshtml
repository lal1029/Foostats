<!DOCTYPE html>
<html>
    <head>
        <title>@ViewBag.Title - Foostats</title>
        <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
        <script src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.10.3/jquery-ui.min.js"></script>
        <link href="http://netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css" rel="stylesheet">
        <script src="http://netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js"></script>
        <link href='http://fonts.googleapis.com/css?family=Oxygen|Roboto+Slab' rel='stylesheet' type='text/css'>
        @Styles.Render("~/Content/style3.css")
        <link href='http://fonts.googleapis.com/css?family=Source+Code+Pro:200' rel='stylesheet' type='text/css'> 
        <link href='http://fonts.googleapis.com/css?family=Open+Sans:400,700,600' rel='stylesheet' type='text/css'>
        <script type='text/javascript' src='http://www.google.com/jsapi'></script>
        <!-- force standards mode for IE10 -->
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" /> 
    </head>
    <body>
        <div class="container">
            <div class="row">
                <div class="login col-lg-9"></div>
                <div class="login col-lg-3"><!--data-placement="bottom" rel="popover" data-html=true data-content="<div class='input-group'>
                                                                                                                       <input list=aliases type='text' class='form-control' placeholder='Alias'>
                                                                                                                   </div>
                                                <input type='password' class='form-control' id='exampleInputPassword' placeholder='Password'><div class='row'>
                                                                                                                                                 <br /><div class='col-lg-12'> <button type='button' class='right btn btn-primary btn-sm'>Login</button></div></div>
                                                ">-->
                    <div>
                        @if (@ViewBag.FoostatsViewContext.UsersAvatar != null)
                        {
                            <img src="@Url.Content(ViewBag.FoostatsViewContext.UsersAvatar)" style="width: 24px; height: 24px; border-radius: 12px; -webkit-border-radius: 12px; -moz-border-radius: 12px; margin-top: 25px; margin-right: 6px;"/>
                        }
                        else
                        {
                            <span class="glyphicon glyphicon-user"></span>
                        }
                        <a href="@Url.Action("Profile", "Player", new {playerDisplayName = User.Identity.Name})" style="text-decoration:none;"> @User.Identity.Name</a>
                    </div><!-- Login | Sign up -->
                    </div>
                </div>
                <br />
                <div id="header"><a href="@Url.Action("Index", "Home")" style="color: #006400; text-decoration: none;">Foostats</a></div>
            <div class="row">
                @RenderBody()
            </div>
                <div class="footer">
                    <hr/>
                    Made by Ameer Ayoub, Jarred Payne, Kathy Sun
                    <br />
                    Soccer ball from __Lo, from The Noun Project 
                </div>
            </div>

      <script src="http://netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js"></script>
      @RenderSection("scripts", required: false)
      @Scripts.Render("~/Scripts/script3.js")
        </body>
    </html>

